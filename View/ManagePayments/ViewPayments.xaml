<Window x:Class="FinanciaRed.View.ManagePayments.ViewPayments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanciaRed.View.ManagePayments"
        mc:Ignorable="d"
        Title="Detalle de pagos" Height="550" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EADDD9" Offset="0"/>
                <GradientStop Color="#E9E7D7" Offset="0.5"/>
                <GradientStop Color="#DFE2DD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Orientation="Vertical" Width="800" HorizontalAlignment="Left">
            <Grid Background="#FFFEEA" Width="800" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="FinanciaRed" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Padding="0" Margin="10"/>
            </Grid>
            <StackPanel Height="425" Width="740" Margin="20" Background="#FFFFFF">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="425" Width="740">
                    <StackPanel Margin="20 10">
                        <StackPanel Orientation="Horizontal" Width="660" Margin="0 0 0 5">
                            <Label Content="Pagos realizados" Margin="0 0 219 0" Style="{StaticResource HeaderText}"/>
                        </StackPanel>
                        <StackPanel x:Name="stackPanel_AmountLeft"
                                    Orientation="Horizontal" Width="660" Margin="0 0 0 8">
                            <Label Content="Monto faltante de pago: " VerticalAlignment="Center"
                                   Style="{StaticResource FieldTag}"/>
                            <TextBox x:Name="textbox_LeftAmount" 
                                     PreviewTextInput="PreviewTextInputAmountLeft"
                                     VerticalAlignment="Center" VerticalContentAlignment="Center"
                                     Width="150" Margin="0 0 115 0"/>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="button_LoadLayout" Content="Recargar" 
                                        Click="ClickLoadLayout"
                                        Padding="10 4" Margin="0 0 5 0" Width="78" Height="26" BorderBrush="Transparent"/>
                                <Button x:Name="button_SaveLayout" Content="Guardar" 
                                        Click="ClickSaveLayout"
                                        Padding="10 4" Margin="0 0 5 0" Width="78" Height="26" BorderBrush="Transparent"/>
                                <Button x:Name="button_Cancel" Content="Cancelar" 
                                        Click="ClickCancel"
                                        Padding="10 4" Margin="0" Width="78" Height="26" BorderBrush="Transparent"/>
                            </StackPanel>
                        </StackPanel>
                        <Grid>
                            <DataGrid x:Name="dataGrid_Payments" AutoGenerateColumns="True"
                                      MinHeight="320" MaxHeight="400" Width="660" 
                                      HorizontalAlignment="Center" VerticalAlignment="Top"
                                      ScrollViewer.CanContentScroll="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      IsReadOnly="true" SelectionMode="Single" 
                                      CanUserResizeRows="False" CanUserResizeColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Fecha" Width="*"  />
                                    <DataGridTextColumn Header="Monto" Width="*"  />
                                    <DataGridTextColumn Header="Estado" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>